<Window x:Class="Wordament.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wordament Solver" Height="629.4" Width="525" Loaded="Window_Loaded">
	<Grid Margin="0,0,0.4,0.4">
		<TextBox x:Name="txtLog" Margin="10,37,10.4,10.4" TextWrapping="Wrap"/>
		<Button x:Name="btnStartStopService" Content="Start Service" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="btnStartStopService_Click"/>
		<Button x:Name="btnClearLog" Content="Clear" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="btnClearLog_Click"/>
		<CheckBox x:Name="chkAutoClearLog" Content="Autoclear Window" HorizontalAlignment="Left" Margin="265,13,0,0" VerticalAlignment="Top" IsChecked="True"/>
		<Button x:Name="btnTest" Content="Test" HorizontalAlignment="Left" Margin="285,10,0,0" VerticalAlignment="Top" Width="75" Click="btnTest_Click" Visibility="Hidden"/>
		<RichTextBox x:Name="txtRichLog" Margin="10,37,10.4,10.4">
			<FlowDocument/>
		</RichTextBox>
		<ListBox x:Name="lstLog" Margin="10,37,10.4,10.4"/>
		<Button x:Name="btnLaunchSite" Content="Launch Site" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="btnLaunchSite_Click"/>

	</Grid>
</Window>
